@model Helpfulcore.RenderingExceptions.Models.RenderingExceptionViewModel

@if (!Sitecore.Context.PageMode.IsNormal || !HttpContext.Current.IsCustomErrorEnabled)
{
	<style>
		.status-messages { font-size: 1.4em !important; margin: 20px 0; } .status-messages .status-header { color: #fff; padding: 10px; } .status-messages li { display: block; padding: 10px; } .status-messages li:last-child { border-bottom: none; } .status-messages { border: solid 1px #000a3e; color: #000a3e; } .status-messages .status-header { background: #000a3e; } .status-messages li { border-bottom: dashed 1px #000a3e; } 
	</style>

	<div class="status-messages">
		<h4 class="status-header">
			Some configuration is missing on the view [@Model.RenderingName] Please, make sure the rendering is configured properly.
		</h4>
		<ul>
			<li>
				@Model.Exception.Message
			</li>
		</ul>
	</div>
}